{
  "$id": "https://mageknight.digital/schemas/network-protocol/v1/server-to-client.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "oneOf": [
    {
      "additionalProperties": false,
      "properties": {
        "events": {
          "items": {
            "$ref": "game-event.schema.json"
          },
          "type": "array"
        },
        "protocolVersion": {
          "const": "1.2.1"
        },
        "state": {
          "$ref": "client-game-state.schema.json"
        },
        "type": {
          "const": "state_update"
        }
      },
      "required": [
        "protocolVersion",
        "type",
        "events",
        "state"
      ],
      "type": "object"
    },
    {
      "additionalProperties": false,
      "properties": {
        "errorCode": {
          "minLength": 1,
          "type": "string"
        },
        "message": {
          "minLength": 1,
          "type": "string"
        },
        "protocolVersion": {
          "const": "1.2.1"
        },
        "type": {
          "const": "error"
        }
      },
      "required": [
        "protocolVersion",
        "type",
        "message"
      ],
      "type": "object"
    },
    {
      "additionalProperties": false,
      "properties": {
        "gameId": {
          "minLength": 1,
          "type": "string"
        },
        "maxPlayers": {
          "minimum": 1,
          "type": "integer"
        },
        "playerIds": {
          "items": {
            "minLength": 1,
            "type": "string"
          },
          "minItems": 1,
          "type": "array"
        },
        "protocolVersion": {
          "const": "1.2.1"
        },
        "status": {
          "enum": [
            "lobby",
            "started"
          ]
        },
        "type": {
          "const": "lobby_state"
        }
      },
      "required": [
        "protocolVersion",
        "type",
        "gameId",
        "status",
        "playerIds",
        "maxPlayers"
      ],
      "type": "object"
    }
  ],
  "title": "Mage Knight Server -> Client WebSocket Messages v1"
}
