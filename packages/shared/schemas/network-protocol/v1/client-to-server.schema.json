{
  "$id": "https://mageknight.digital/schemas/network-protocol/v1/client-to-server.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "oneOf": [
    {
      "additionalProperties": false,
      "properties": {
        "action": {
          "$ref": "player-action.schema.json"
        },
        "protocolVersion": {
          "const": "1.2.7"
        },
        "type": {
          "const": "action"
        }
      },
      "required": [
        "protocolVersion",
        "type",
        "action"
      ],
      "type": "object"
    },
    {
      "additionalProperties": false,
      "properties": {
        "gameId": {
          "minLength": 1,
          "type": "string"
        },
        "playerId": {
          "minLength": 1,
          "type": "string"
        },
        "protocolVersion": {
          "const": "1.2.7"
        },
        "sessionToken": {
          "minLength": 1,
          "type": "string"
        },
        "type": {
          "const": "lobby_subscribe"
        }
      },
      "required": [
        "protocolVersion",
        "type",
        "gameId",
        "playerId"
      ],
      "type": "object"
    }
  ],
  "title": "Mage Knight Client -> Server WebSocket Messages v1"
}
