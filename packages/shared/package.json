{
  "name": "@mage-knight/shared",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run generate:network-schemas && bunup",
    "build:legacy": "bun run build:esm && bun run build:cjs",
    "build:esm": "tsc -p tsconfig.build.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "generate:network-schemas": "bun run scripts/generateNetworkProtocolSchemas.ts",
    "check:network-version": "bun run scripts/checkNetworkProtocolVersion.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov"
  },
  "devDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20260203.1",
    "typescript": "^5.7.2"
  }
}
